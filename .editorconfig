################################################################################
#
# Editorconfig
#
# An `.editorconfig` file helps maintain consistent coding styles for multiple
# developers working on the same project across various editors and IDEs. see
# more at <https://editorconfig.org/>
#
################################################################################

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# Shell
[*.{sh,bash}]
indent_style = space
indent_size = 2
switch_case_indent = true

# Json
[*.json]
max_line_length = 80
indent_style = space
indent_size = 2

# Yaml
[{*.yml, *.yaml}]
max_line_length = 80
indent_style = space
indent_size = 2

# Markdown
[*.md]
max_line_length = 80
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Python
[*.py]
indent_size = 4
indent_style = space
max_line_length = 88

# *rc config files
[.*rc]
max_line_length = 100
indent_style = space
indent_size = 2
